  <script>
    function updateClock() {
      const now = new Date();
      const hours = String(now.getHours()).padStart(2, '0');
      const minutes = String(now.getMinutes()).padStart(2, '0');
      const seconds = String(now.getSeconds()).padStart(2, '0');
      document.getElementById('clock').textContent = `${hours}:${minutes}:${seconds}`;
    }

    setInterval(updateClock, 1000);
    updateClock();

    document.getElementById('youtube-icon').addEventListener('click', function() {
      const userKey = prompt("Hãy nhập KEY để tiếp tục:");
      const correctKey = "duytungchimtobucuviethitleson";

      if (userKey === correctKey) {
        document.querySelector('.container').style.display = 'none'; 
        document.getElementById('script-box').style.display = 'block';
      } else {
        alert("Sai KEY! Không thể truy cập.");
      }
    });
  </script>

